<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Business Page</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            line-height: 1.6;
            margin: 0;
            padding: 20px;
            background-color: #f4f4f4;
        }
        h1, h2, h3 {
            color: #333;
        }
        .section {
            background-color: #fff;
            border-radius: 5px;
            padding: 20px;
            margin-bottom: 20px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }
        .card, .checkbox-point, .question {
            border: 1px solid #ddd;
            padding: 15px;
            margin-bottom: 15px;
            border-radius: 5px;
            background-color: #f9f9f9;
        }
        input[type="text"], input[type="number"] {
            width: 100%;
            padding: 8px;
            margin-bottom: 10px;
            border: 1px solid #ddd;
            border-radius: 4px;
        }
        button {
            background-color: #4CAF50;
            color: white;
            padding: 10px 15px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            margin-right: 10px;
        }
        button:hover {
            background-color: #45a049;
        }
        input[type="submit"] {
            background-color: #008CBA;
            color: white;
            padding: 12px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
        }
        input[type="submit"]:hover {
            background-color: #007B9A;
        }
        .cards-container {
            display: flex;
            justify-content: space-between;
            gap: 20px;
        }
        .card {
            flex: 1;
        }
        .checkbox-point {
            display: flex;
            align-items: center;
            gap: 10px;
        }
        .checkbox-point input[type="text"],
        .checkbox-point input[type="number"] {
            flex: 1;
            margin-bottom: 0;
        }
        .feature-container {
            display: flex;
            align-items: center;
            gap: 10px;
            margin-bottom: 10px;
        }
        .feature-container input[type="text"] {
            width: 80%;
            margin-bottom: 0;
        }
        .feature-container button {
            width: 15%;
        }
        .question-label {
            font-weight: bold;
            margin-bottom: 5px;
        }
        .options-container {
            margin-top: 10px;
        }
        .option {
            display: flex;
            align-items: center;
            gap: 10px;
            margin-bottom: 5px;
        }
        .value-price-container {
            display: flex;
            justify-content: space-between;
            margin-bottom: 10px;
        }
        .value-price-container input[type="text"],
        .value-price-container input[type="number"] {
            width: 45%;
        }
    </style>
</head>
<body>
    <%- include('partials/admin-navbar') %>
    <h1>Edit Business Page</h1>
    <form action="/admin/business" method="POST">
        <div class="section">
            <label for="mainTitlePart1">Main Title Part 1:</label>
            <input type="text" id="mainTitlePart1" name="mainTitlePart1" value="<%= pageData.mainTitlePart1 %>"><br><br>

            <label for="mainTitlePart2">Main Title Part 2:</label>
            <input type="text" id="mainTitlePart2" name="mainTitlePart2" value="<%= pageData.mainTitlePart2 %>"><br><br>

            <label for="subHeading">Sub Heading:</label>
            <input type="text" id="subHeading" name="subHeading" value="<%= pageData.subHeading %>"><br><br>
        </div>

        <div class="section">
            <h2>Cards</h2>
            <div id="cardsContainer" class="cards-container">
                <% if (pageData && pageData.cards) { %>
                    <% for(let i = 0; i < 3; i++) { %>
                        <div class="card">
                            <input type="text" name="cards[<%= i %>][title]" value="<%= pageData.cards[i] ? pageData.cards[i].title : '' %>" placeholder="Card Title">
                            <input type="text" name="cards[<%= i %>][description]" value="<%= pageData.cards[i] ? pageData.cards[i].description : '' %>" placeholder="Card Description">
                        </div>
                    <% } %>
                <% } else { %>
                    <p>No card data available for business</p>
                <% } %>
            </div>
        </div>

        <div class="section">
            <h2>Left Section</h2>
            <label for="leftSectionHeading">Heading:</label>
            <input type="text" id="leftSectionHeading" name="leftSection[heading]" value="<%= pageData.leftSection.heading %>"><br><br>

            <h3>Questions</h3>
            <div id="questionsContainer">
                <% for (let i = 0; i < 7; i++) { %>
                    <div class="question">
                        <div class="question-label">Question <%= i+1 %></div>
                        <% if (i === 1) { %>
                            <input type="text" name="leftSection[questions][<%= i %>][text]" value="<%= pageData.leftSection.questions && pageData.leftSection.questions[i] ? pageData.leftSection.questions[i].text : '' %>" placeholder="Enter question here">
                            <% for (let j = 0; j < 5; j++) { %>
                                <div class="value-price-container">
                                    <input type="text" name="leftSection[questions][<%= i %>][values][<%= j %>]" placeholder="Value <%= j+1 %>">
                                    <input type="number" name="leftSection[questions][<%= i %>][prices][<%= j %>]" placeholder="Price <%= j+1 %>">
                                </div>
                            <% } %>
                        <% } else { %>
                            <input type="text" name="leftSection[questions][<%= i %>][text]" value="<%= pageData.leftSection.questions && pageData.leftSection.questions[i] ? pageData.leftSection.questions[i].text : '' %>" placeholder="Enter question here">
                            <div class="options-container">
                                <% if (pageData.leftSection.questions && pageData.leftSection.questions[i] && pageData.leftSection.questions[i].options) { %>
                                    <% pageData.leftSection.questions[i].options.forEach((option, optionIndex) => { %>
                                        <div class="option">
                                            <input type="text" name="leftSection[questions][<%= i %>][options][<%= optionIndex %>]" value="<%= option %>" placeholder="Option">
                                            <button type="button" onclick="removeOption(this)">Remove Option</button>
                                        </div>
                                    <% }) %>
                                <% } %>
                            </div>
                            <button type="button" onclick="addOption(this)">Add Option</button>
                        <% } %>
                        <button type="button" onclick="removeQuestion(this)">Remove Question</button>
                    </div>
                <% } %>
            </div>
            <button type="button" onclick="addQuestion()">Add New Question</button>
        </div>

        <div class="section">
            <h2>Right Section</h2>
            <label for="rightSectionTitle">Title:</label>
            <input type="text" id="rightSectionTitle" name="rightSection[title]" value="<%= pageData.rightSection.title %>"><br><br>

            <label for="basePrice">Base Price:</label>
            <input type="number" id="basePrice" name="rightSection[basePrice]" value="<%= pageData.rightSection.basePrice %>"><br><br>

            <h3>All Plans Include</h3>
            <div id="allPlansIncludeContainer">
                <% pageData.rightSection.allPlansInclude.forEach((feature, index) => { %>
                    <div class="feature-container">
                        <input type="text" name="rightSection[allPlansInclude][]" value="<%= feature %>">
                        <button type="button" onclick="removeFeature(this)">Remove</button>
                    </div>
                <% }) %>
            </div>
            <button type="button" onclick="addFeature()">Add Feature</button>
        </div>

        <input type="submit" value="Save Changes">
    </form>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        function removeQuestion(button) {
            button.closest('.question').remove();
            updateQuestionNumbers();
        }

        function addQuestion() {
            const container = document.getElementById('questionsContainer');
            const index = container.children.length;
            const newQuestion = document.createElement('div');
            newQuestion.className = 'question';
            newQuestion.innerHTML = `
                <div class="question-label">Question ${index+1}</div>
                <input type="text" name="leftSection[questions][${index}][text]" placeholder="Enter question here">
                <div class="options-container"></div>
                <button type="button" onclick="addOption(this)">Add Option</button>
                <button type="button" onclick="removeQuestion(this)">Remove Question</button>
            `;
            container.appendChild(newQuestion);
        }

        function updateQuestionNumbers() {
            const questions = document.querySelectorAll('.question');
            questions.forEach((question, index) => {
                question.querySelector('.question-label').textContent = `Question ${index + 1}`;
            });
        }

        function addOption(button) {
            const optionsContainer = button.previousElementSibling;
            const optionIndex = optionsContainer.children.length;
            const questionIndex = button.closest('.question').getAttribute('data-index');
            const newOption = document.createElement('div');
            newOption.className = 'option';
            newOption.innerHTML = `
                <input type="text" name="leftSection[questions][${questionIndex}][options][${optionIndex}]" placeholder="Option">
                <button type="button" onclick="removeOption(this)">Remove Option</button>
            `;
            optionsContainer.appendChild(newOption);
        }

        function removeOption(button) {
            button.closest('.option').remove();
        }

        function addFeature() {
            const container = document.getElementById('allPlansIncludeContainer');
            const newFeature = document.createElement('div');
            newFeature.className = 'feature-container';
            newFeature.innerHTML = `
                <input type="text" name="rightSection[allPlansInclude][]" placeholder="Feature">
                <button type="button" onclick="removeFeature(this)">Remove</button>
            `;
            container.appendChild(newFeature);
        }

        function removeFeature(button) {
            button.parentElement.remove();
        }

        $('form').on('submit', function(e) {
            e.preventDefault();
            $.ajax({
                url: '/admin/business',
                method: 'POST',
                data: $(this).serialize(),
                success: function(response) {
                    alert('Changes saved successfully!');
                },
                error: function(error) {
                    alert('Error saving changes. Please try again.');
                }
            });
        });
    </script>
</body>
</html>
