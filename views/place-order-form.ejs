<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Place Order Page</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            line-height: 1.6;
            margin: 0;
            padding: 20px;
            background-color: #f4f4f4;
        }
        h1, h2, h3 {
            color: #333;
        }
        .section {
            background-color: #fff;
            border-radius: 5px;
            padding: 20px;
            margin-bottom: 20px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }
        .card, .checkbox-point {
            border: 1px solid #ddd;
            padding: 15px;
            margin-bottom: 15px;
            border-radius: 5px;
            background-color: #f9f9f9;
        }
        input[type="text"], input[type="number"] {
            width: 100%;
            padding: 8px;
            margin-bottom: 10px;
            border: 1px solid #ddd;
            border-radius: 4px;
        }
        button {
            background-color: #4CAF50;
            color: white;
            padding: 10px 15px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            margin-right: 10px;
        }
        button:hover {
            background-color: #45a049;
        }
        input[type="submit"] {
            background-color: #008CBA;
            color: white;
            padding: 12px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
        }
        input[type="submit"]:hover {
            background-color: #007B9A;
        }
    </style>
</head>
<body>
    <%- include('partials/admin-navbar') %>
    <h1>Edit Place Order Page</h1>
    <form action="/admin/place-order" method="POST">
        <div class="section">
            <label for="mainTitlePart1">Main Title Part 1:</label>
            <input type="text" id="mainTitlePart1" name="mainTitlePart1" value="<%= pageData.mainTitlePart1 %>"><br><br>

            <label for="mainTitlePart2">Main Title Part 2:</label>
            <input type="text" id="mainTitlePart2" name="mainTitlePart2" value="<%= pageData.mainTitlePart2 %>"><br><br>

            <label for="subHeading">Sub Heading:</label>
            <input type="text" id="subHeading" name="subHeading" value="<%= pageData.subHeading %>"><br><br>
        </div>

        <div class="section">
            <h2>Cards</h2>
            <div id="cardsContainer">
                <% if (pageData && pageData.cards && Array.isArray(pageData.cards)) { %>
                    <% pageData.cards.forEach((card, index) => { %>
                        <div class="card">
                            <input type="text" name="cards[<%= index %>][title]" value="<%= card.title %>" placeholder="Card Title">
                            <input type="text" name="cards[<%= index %>][description]" value="<%= card.description %>" placeholder="Card Description">
                            <button type="button" onclick="removeCard(this)">Remove</button>
                        </div>
                    <% }) %>
                <% } else { %>
                    <p>No cards available at the moment.</p>
                <% } %>
            </div>
            <button type="button" onclick="addCard()">Add Card</button>
        </div>

        <div class="section">
            <h2>Left Section</h2>
            <label for="leftSectionHeading">Heading:</label>
            <input type="text" id="leftSectionHeading" name="leftSection[heading]" value="<%= pageData.leftSection.heading %>"><br><br>

            <h3>Checkbox Points</h3>
            <div id="checkboxPointsContainer">
                <% pageData.leftSection.checkboxPoints.forEach((point, index) => { %>
                    <div class="checkbox-point">
                        <input type="text" name="leftSection[checkboxPoints][<%= index %>][icon]" value="<%= point.icon %>" placeholder="Icon URL">
                        <input type="text" name="leftSection[checkboxPoints][<%= index %>][title]" value="<%= point.title %>" placeholder="Title">
                        <input type="number" name="leftSection[checkboxPoints][<%= index %>][price]" value="<%= point.price %>" placeholder="Price">
                        <label>
                            <input type="checkbox" name="leftSection[checkboxPoints][<%= index %>][showInPage]" <%= point.showInPage ? 'checked' : '' %>>
                            Show in Page
                        </label>
                        <button type="button" onclick="removeCheckboxPoint(this)">Remove</button>
                    </div>
                <% }) %>
            </div>
            <button type="button" onclick="addCheckboxPoint()">Add Checkbox Point</button>
        </div>

        <div class="section">
            <h2>Right Section</h2>
            <label for="rightSectionTitle">Title:</label>
            <input type="text" id="rightSectionTitle" name="rightSection[title]" value="<%= pageData.rightSection.title %>"><br><br>

            <label for="basePrice">Base Price:</label>
            <input type="number" id="basePrice" name="rightSection[basePrice]" value="<%= pageData.rightSection.basePrice %>"><br><br>

            <h3>All Plans Include</h3>
            <div id="allPlansIncludeContainer">
                <% pageData.rightSection.allPlansInclude.forEach((feature, index) => { %>
                    <div>
                        <input type="text" name="rightSection[allPlansInclude][]" value="<%= feature %>">
                        <button type="button" onclick="removeFeature(this)">Remove</button>
                    </div>
                <% }) %>
            </div>
            <button type="button" onclick="addFeature()">Add Feature</button>
        </div>

        <input type="submit" value="Save Changes">
    </form>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        // Same JavaScript functions as in business-form.ejs

        $('form').on('submit', function(e) {
            e.preventDefault();
            $.ajax({
                url: '/admin/place-order',
                method: 'POST',
                data: $(this).serialize(),
                success: function(response) {
                    alert('Changes saved successfully!');
                },
                error: function(error) {
                    alert('Error saving changes. Please try again.');
                }
            });
        });
    </script>
</body>
</html>
